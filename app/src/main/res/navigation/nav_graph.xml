<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/LandingPage">

    <fragment
        android:id="@+id/LandingPage"
        android:name="com.example.fiveminutejournal.LandingPage"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_LandingPage_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/action_LandingPage_to_journalEntryList"
            app:destination="@id/journalEntryList" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.fiveminutejournal.JournalEntry"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_LandingPage"
            app:destination="@id/LandingPage" />
    </fragment>
    <fragment
        android:id="@+id/oldJournalEntry"
        android:name="com.example.fiveminutejournal.OldJournalEntry"
        android:label="Previous Entry"
        tools:layout="@layout/fragment_old_journal_entry" >
        <argument android:name="date" />
        <argument android:name="content" />
    </fragment>
    <fragment
        android:id="@+id/journalEntryList"
        android:name="com.example.fiveminutejournal.JournalEntryList"
        android:label="Past Entries"
        tools:layout="@layout/fragment_journal_entry_list" >
        <action
            android:id="@+id/action_journalEntryList_to_oldJournalEntry"
            app:destination="@id/oldJournalEntry" />
    </fragment>
</navigation>